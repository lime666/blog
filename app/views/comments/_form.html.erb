<%= form_with model: [@post, @post.comments.build] do |form| %>
  <p>
    <div class="field">
      <%= form.label :body %>
      <%= form.rich_text_area :body %>
    </div>
  </p>

  <p>
    <div class='field'>
      <%= form.select(:author_id, Author.all.collect {|a| [ a.full_name, a.id ] }, {}, {:class => "select_author"}) %>
    </div>
  </p>

  <p>
    <div class="actions">
      <%= form.submit %>
    </div>
  </p>
<% end %>
