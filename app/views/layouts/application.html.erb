<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css">
  </head>

  <body>

    <div id="user_header">
      <% if current_author %>
        Logged in as <%= current_author.full_name %>.
        <%= link_to "Log Out", sign_out_path, class: 'btn btn-light ml-3', method: :delete %>
        <%= link_to "Profile", profile_path, class: 'btn btn-light ml-3', method: :get %>
      <% else %>
      <%= link_to "Sign Up", register_path, class: 'btn btn-light ml-3' %>
      <%= link_to "Sign In", sign_in_path, class: 'btn btn-light ml-3' %>
      <% end %>
      <form class='form-inline my-2 my-lg-0' action='/search'>
        <input class='form-control mr-sm-2' name='q' type='text' placeholder='Search' aria-label='Search'>
        <button class='btn btn-outline-success my-2 my-sm-0' type='submit'>Search</button>
      </form>
    </div>

      <%= render 'layouts/modal_signup' if modal_signup %>

    <%= yield %>
  </body>
</html>
