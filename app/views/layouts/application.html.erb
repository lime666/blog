<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="user_header">
      <% if current_author %>
        Logged in as <%= current_author.full_name %>.
        <%= link_to "Log Out", sign_out_path, class: 'btn btn-light ml-3', method: :delete %>
      <% else %>
      <%= link_to "Sign Up", register_path, class: 'btn btn-light ml-3' %>
      <%= link_to "Sign In", sign_in_path, class: 'btn btn-light ml-3' %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
