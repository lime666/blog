<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="my_modal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="my_modal">Hi stranger!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Please, sign up or sign in to continue =)</p>
      </div>
      <div class="modal-footer">
        <%= link_to "Sign Up", register_path, class: 'btn btn-secondary ml-3' %>
        <%= link_to "Sign In", sign_in_path, class: 'btn btn-secondary ml-3 text-white' %>
      </div>
    </div>
  </div>
</div>
